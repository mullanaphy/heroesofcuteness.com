{% set site = {'title': 'Heroes of Cuteness'} %}
{% set canonical_url = canonical_url is defined ? canonical_url : app.request.uri %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ site.title }}{% endblock %}</title>
    <link rel="canonical" href="{{ canonical_url }}">
    {% block head_meta %}
    {% endblock %}
    {% block stylesheets %}
        <link href="/assets/css/app.css" rel="stylesheet" type="text/css"/>
    {% endblock %}
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">
    {% if google_tag_manager_id %}
        <script async src="https://www.googletagmanager.com/gtag/js?id={{ google_tag_manager_id }}"></script>
        <script>
            window.dataLayer = window.dataLayer || [];

            function gtag() {
                dataLayer.push(arguments);
            }

            gtag('js', new Date());
            gtag('config', '{{ google_tag_manager_id }}');
        </script>
    {% endif %}
</head>
<body>
<div class="container shadow-lg">
    <div class="logo position-relative">
        <div class="position-absolute bottom-0 start-0 p-1">
            <a class="btn btn-sm btn-success" href="https://bsky.app/profile/heroesofcuteness.com">
                <span class="bi bi-twitter"></span>
                <span class="d-none d-lg-inline"> Bluesky</span></a>
            <a class="btn btn-sm btn-success" href="https://instagram.com/heroesofcuteness">
                <span class="bi bi-instagram"></span>
                <span class="d-none d-lg-inline"> Instagram</span></a>
            <a class="btn btn-sm btn-success" href="https://threads.net/@heroesofcuteness">
                <span class="bi bi-threads"></span>
                <span class="d-none d-lg-inline"> Threads</span></a>
            <a class="btn btn-sm btn-success" href="https://github.com/mullanaphy/heroesofcuteness.com">
                <span class="bi bi-github"></span>
                <span class="d-none d-lg-inline"> Source Code</span></a>
        </div>
        <a href="{{ path('index') }}">
            <img alt="Heroes of Cuteness!" src="/assets/img/logo.jpg" class="img-fluid">
        </a>
    </div>
</div>
{% block body %}
{% endblock %}
{% block footer %}
    <div class="container">
        <div class="row pb-3">
            <div class="col-xs-12 col-sm-12 col-md-9 mt-3">
                <hr>
                By <a href="https://initials.kim">Keira</a> &amp; <a
                        href="https://john.mu">John</a> | &copy; 2024-{{ 'now' | date('Y') }} All Rights Reserved | <a
                        href="{{ path('comic_archive') }}">Comics</a> | <a href="{{ path('character_archive') }}">Characters</a>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-3 mt-3">
                <form class="input-group right" role="search" aria-label="Search" method="GET"
                      action="{{ path('search') }}">
                    <input type="text" class="form-control w-50" name="q" placeholder="Search" aria-label="Search"
                           {% if page is defined and page.parameters and page.parameters.q %}value="{{ page.parameters.q }}"{% endif %}>
                    <button type="submit" class="btn btn-warning"><span class="bi bi-search"></span></button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="/assets/js/bootstrap.min.js" type="text/javascript"></script>
{% endblock %}
</body>
</html>
